#!/usr/bin/env python3

import math
import time
import rclpy
from rclpy.node import Node
from rclpy.action import ActionClient
from rclpy.qos import QoSProfile, qos_profile_sensor_data, ReliabilityPolicy, DurabilityPolicy

import cv2
import numpy as np
from cv_bridge import CvBridge, CvBridgeError

from geometry_msgs.msg import Twist, PoseWithCovarianceStamped
from sensor_msgs.msg import Image, LaserScan
from visualization_msgs.msg import Marker, MarkerArray
from nav2_msgs.action import NavigateToPose
from action_msgs.msg import GoalStatus

class AutonomousSearch(Node):
    """
    Single node that:
    - Acts as an Action Client to ROS 2 Nav2 (Navigation Stack)
    - Sends waypoints to Nav2 for robust obstacle avoidance and path planning
    - INTERRUPTS Nav2 when an object is detected to perform visual servoing
    - Detects red/green objects, tags them, and resumes navigation
    """

    def __init__(self):
        super().__init__("autonomous_search_node")

        # QoS settings
        sensor_qos = qos_profile_sensor_data
        
        # AMCL pose usually uses TRANSIENT_LOCAL durability
        amcl_qos = QoSProfile(
            depth=1,
            durability=DurabilityPolicy.TRANSIENT_LOCAL,
            reliability=ReliabilityPolicy.RELIABLE
        )

        # Camera QoS
        camera_qos = QoSProfile(
            depth=1,
            durability=DurabilityPolicy.VOLATILE,
            reliability=ReliabilityPolicy.RELIABLE
        )

        # Publishers
        self.cmd_pub = self.create_publisher(Twist, "/cmd_vel", 10)
        self.marker_pub = self.create_publisher(Marker, "/detected_objects", 10)
        self.waypoint_marker_pub = self.create_publisher(MarkerArray, "/waypoint_markers", 10)

        # Action Client for Nav2
        self._nav_client = ActionClient(self, NavigateToPose, 'navigate_to_pose')

        # Subscribers
        self.image_sub = self.create_subscription(
            Image,
            "/camera/image_raw", 
            self.image_callback,
            camera_qos,
        )

        self.scan_sub = self.create_subscription(
            LaserScan,
            "/scan",
            self.scan_callback,
            sensor_qos,
        )

        self.pose_sub = self.create_subscription(
            PoseWithCovarianceStamped,
            "/amcl_pose",
            self.pose_callback,
            amcl_qos,
        )

        # Helpers
        self.bridge = CvBridge()

        # Robot State
        self.robot_pose = {'x': 0.0, 'y': 0.0, 'yaw': 0.0}
        self.have_pose = False
        
        # Nav2 State Handling
        self.goal_handle = None
        self.nav_result_future = None
        self.navigation_active = False
        self.cancel_reason = "NONE" # Track why we cancelled: "OBJECT" or "REACHED"

        # Laser info (Still needed for the final approach logic)
        self.front_distance = None

        # Detection from camera
        self.current_detection = None
        self.img_count = 0 

        # Found objects list
        self.found_objects = []
        self.marker_id_counter = 0

        # Behaviour state
        self.state = "IDLE" 
        self.turn_away_counter = 0 
        self.backup_counter = 0    

        # Waypoint Navigation
        self.unvisited_waypoints = []
        # Generate dense grid x from -1.6 to 5.6, y from -3.7 to 3.9
        for x in np.arange(-1.6, 5.7, 2.0):
            for y in np.arange(-3.7, 4.0, 2.0):
                self.unvisited_waypoints.append((x, y))
        
        self.current_waypoint = None 

        # Tuning parameters
        self.min_contour_area = 800.0 
        # Increased tolerance to prevent robot from getting stuck trying to reach exact point
        self.waypoint_dist_tolerance = 0.6 

        # HSV ranges
        self.red_lower_1 = np.array([0, 185, 140])
        self.red_upper_1 = np.array([10, 255, 255])
        self.red_lower_2 = np.array([170, 185, 140])
        self.red_upper_2 = np.array([180, 255, 255])

        self.green_lower = np.array([35, 80, 50])
        self.green_upper = np.array([85, 255, 255])

        # Manual Motion Parameters (Only used during Approach/Tagging)
        self.safe_object_distance = 0.8      
        self.max_linear_speed = 0.2    
        self.max_angular_speed = 0.5   
        self.center_tolerance = 0.1          
        
        self.get_logger().info("AutonomousSearch (Nav2) node started.")
        
        # Control loop timer
        self.timer = self.create_timer(0.1, self.control_loop)

    # -------------- Callbacks --------------

    def pose_callback(self, msg: PoseWithCovarianceStamped):
        pose = msg.pose.pose
        self.robot_pose['x'] = pose.position.x
        self.robot_pose['y'] = pose.position.y

        q = pose.orientation
        siny_cosp = 2.0 * (q.w * q.z + q.x * q.y)
        cosy_cosp = 1.0 - 2.0 * (q.y * q.y + q.z * q.z)
        self.robot_pose['yaw'] = math.atan2(siny_cosp, cosy_cosp)

        self.have_pose = True

    def scan_callback(self, msg: LaserScan):
        # We only need scan for the final "approach" safety check.
        # Nav2 handles obstacle avoidance during normal travel.
        ranges = msg.ranges
        if not ranges:
            self.front_distance = None
            return
        
        front_ranges = list(ranges[0:30]) + list(ranges[330:360])
        valid_front = [r for r in front_ranges if np.isfinite(r) and 0.05 < r < 10.0]
        if valid_front:
            self.front_distance = float(min(valid_front))
        else:
            self.front_distance = None

    def image_callback(self, msg: Image):
        try:
            cv_image = self.bridge.imgmsg_to_cv2(msg, "bgr8")
        except CvBridgeError as e:
            self.get_logger().error(f"CV Bridge error: {e}")
            return

        hsv = cv2.cvtColor(cv_image, cv2.COLOR_BGR2HSV)
        height, width, _ = cv_image.shape

        mask_r1 = cv2.inRange(hsv, self.red_lower_1, self.red_upper_1)
        mask_r2 = cv2.inRange(hsv, self.red_lower_2, self.red_upper_2)
        mask_red = cv2.bitwise_or(mask_r1, mask_r2)
        mask_green = cv2.inRange(hsv, self.green_lower, self.green_upper)

        red_det = self.find_blob(mask_red, width, label="RED")
        green_det = self.find_blob(mask_green, width, label="GREEN")

        candidates = []
        if red_det is not None:
            candidates.append({"type": "hydrant", "offset": red_det["offset"], "area": red_det["area"]})
        if green_det is not None:
            candidates.append({"type": "trash_can", "offset": green_det["offset"], "area": green_det["area"]})

        if not candidates:
            self.current_detection = None
            return

        best = max(candidates, key=lambda d: d["area"])
        self.current_detection = best

    def find_blob(self, mask, width, label=""):
        contours, _ = cv2.findContours(mask, cv2.RETR_EXTERNAL, cv2.CHAIN_APPROX_SIMPLE)
        if not contours: return None
        largest = max(contours, key=cv2.contourArea)
        area = cv2.contourArea(largest)
        if area < self.min_contour_area: return None
        M = cv2.moments(largest)
        if M["m00"] == 0: return None
        cx = int(M["m10"] / M["m00"])
        offset = (cx - width / 2.0) / (width / 2.0)
        return {"cx": cx, "offset": offset, "area": area}

    # -------------- Nav2 Helpers --------------

    def send_nav_goal(self, x, y):
        """Sends a goal to the Nav2 Action Server"""
        if not self._nav_client.wait_for_server(timeout_sec=1.0):
            self.get_logger().warn("Nav2 Action Server not available!")
            return False

        goal_msg = NavigateToPose.Goal()
        goal_msg.pose.header.frame_id = 'map'
        goal_msg.pose.header.stamp = self.get_clock().now().to_msg()
        
        goal_msg.pose.pose.position.x = float(x)
        goal_msg.pose.pose.position.y = float(y)
        goal_msg.pose.pose.orientation.w = 1.0 # Standard orientation

        self.get_logger().info(f"Sending Nav2 goal: ({x}, {y})")
        self.cancel_reason = "NONE" # Reset reason
        
        self._send_goal_future = self._nav_client.send_goal_async(
            goal_msg,
            feedback_callback=self.feedback_callback
        )
        self._send_goal_future.add_done_callback(self.goal_response_callback)
        return True

    def feedback_callback(self, feedback_msg):
        dist = feedback_msg.feedback.distance_remaining
        # EARLY EXIT: If we are close enough, cancel and move on.
        # This prevents the robot from pausing/rotating trying to get to the exact mm.
        if dist < self.waypoint_dist_tolerance:
            if self.navigation_active and self.cancel_reason == "NONE":
                self.get_logger().info(f"Waypoint reached within tolerance ({dist:.2f}m). Moving to next.")
                self.cancel_reason = "REACHED"
                self.cancel_nav_goal()

    def goal_response_callback(self, future):
        goal_handle = future.result()
        if not goal_handle.accepted:
            self.get_logger().info('Nav2 Goal rejected :(')
            self.navigation_active = False
            # If rejected, maybe remove waypoint or try next?
            self.state = "IDLE" 
            return

        self.get_logger().info('Nav2 Goal accepted :)')
        self.goal_handle = goal_handle
        self.navigation_active = True
        
        self._get_result_future = goal_handle.get_result_async()
        self._get_result_future.add_done_callback(self.get_result_callback)

    def get_result_callback(self, future):
        result_handle = future.result()
        status = result_handle.status
        
        self.get_logger().info(f'Nav2 Goal finished with status: {status}')
        self.navigation_active = False
        self.goal_handle = None
        
        # Handle Waypoint Removal based on Status
        if status == GoalStatus.STATUS_SUCCEEDED:
            self.get_logger().info("Goal Succeeded!")
            if self.current_waypoint in self.unvisited_waypoints:
                self.unvisited_waypoints.remove(self.current_waypoint)
                
        elif status == GoalStatus.STATUS_ABORTED:
            self.get_logger().warn("Goal Aborted (Unreachable?). Removing waypoint.")
            if self.current_waypoint in self.unvisited_waypoints:
                self.unvisited_waypoints.remove(self.current_waypoint)
                
        elif status == GoalStatus.STATUS_CANCELED:
            if self.cancel_reason == "REACHED":
                self.get_logger().info("Goal Canceled (Reached Tolerance). Marking as done.")
                if self.current_waypoint in self.unvisited_waypoints:
                    self.unvisited_waypoints.remove(self.current_waypoint)
            else:
                self.get_logger().info("Goal Canceled (Object Detected). Retrying later.")
                # Do NOT remove waypoint. We will revisit it after handling the object.

        self.current_waypoint = None
        
        # CRITICAL FIX: Only reset state to IDLE if we were actually navigating.
        # If we are currently handling an object (TURN/APPROACH), DO NOT override that state.
        if self.state == "NAVIGATING":
            self.state = "IDLE"

    def cancel_nav_goal(self):
        """Cancels the current Nav2 goal to take manual control"""
        if self.goal_handle is not None and self.navigation_active:
            # self.get_logger().warn("Cancelling Nav2 goal...")
            self.goal_handle.cancel_goal_async()
            self.goal_handle = None
            self.navigation_active = False
            # Stop the robot immediately so we can take over
            self.stop_robot()

    # -------------- Object localisation and markers --------------

    def estimate_object_position(self, detection, dist=None):
        if not self.have_pose: return None, None
        d = dist if dist is not None else self.safe_object_distance
        x = self.robot_pose['x']
        y = self.robot_pose['y']
        yaw = self.robot_pose['yaw']
        obj_x = x + d * math.cos(yaw)
        obj_y = y + d * math.sin(yaw)
        return obj_x, obj_y

    def is_duplicate_object(self, obj_type, obj_x, obj_y, min_dist=0.5):
        for existing in self.found_objects:
            dx = existing["x"] - obj_x
            dy = existing["y"] - obj_y
            if math.sqrt(dx * dx + dy * dy) < min_dist and existing["type"] == obj_type:
                return True
        return False

    def publish_marker(self, obj_type, obj_x, obj_y):
        marker = Marker()
        marker.header.frame_id = "map"
        marker.header.stamp = self.get_clock().now().to_msg()
        marker.ns = "detected_objects"
        marker.id = self.marker_id_counter
        self.marker_id_counter += 1
        marker.type = Marker.SPHERE
        marker.action = Marker.ADD
        marker.pose.position.x = obj_x
        marker.pose.position.y = obj_y
        marker.pose.position.z = 0.1
        marker.pose.orientation.w = 1.0
        marker.scale.x = 0.3; marker.scale.y = 0.3; marker.scale.z = 0.3
        if "hydrant" in obj_type: marker.color.r = 1.0; marker.color.g = 0.0; marker.color.b = 0.0
        else: marker.color.r = 0.0; marker.color.g = 1.0; marker.color.b = 0.0
        marker.color.a = 1.0
        self.marker_pub.publish(marker)
        
    def publish_waypoints(self):
        marker_array = MarkerArray()
        delete_marker = Marker()
        delete_marker.action = Marker.DELETEALL
        marker_array.markers.append(delete_marker)
        
        if self.current_waypoint:
            m = Marker()
            m.header.frame_id = "map"
            m.header.stamp = self.get_clock().now().to_msg()
            m.ns = "current_waypoint"
            m.id = 0
            m.type = Marker.SPHERE
            m.action = Marker.ADD
            m.pose.position.x = self.current_waypoint[0]
            m.pose.position.y = self.current_waypoint[1]
            m.pose.position.z = 0.3
            m.scale.x = 0.4; m.scale.y = 0.4; m.scale.z = 0.4
            m.color.r = 1.0; m.color.g = 1.0; m.color.b = 0.0; m.color.a = 1.0
            marker_array.markers.append(m)
            
        for i, wp in enumerate(self.unvisited_waypoints):
            m = Marker()
            m.header.frame_id = "map"
            m.header.stamp = self.get_clock().now().to_msg()
            m.ns = "unvisited_waypoints"
            m.id = i + 1
            m.type = Marker.CUBE
            m.action = Marker.ADD
            m.pose.position.x = wp[0]
            m.pose.position.y = wp[1]
            m.pose.position.z = 0.1
            m.scale.x = 0.15; m.scale.y = 0.15; m.scale.z = 0.15
            m.color.r = 1.0; m.color.g = 1.0; m.color.b = 0.0; m.color.a = 0.6
            marker_array.markers.append(m)
        self.waypoint_marker_pub.publish(marker_array)

    def handle_new_detection(self, detection):
        found_type = detection['type']
        obj_x, obj_y = self.estimate_object_position(detection, dist=self.front_distance)
        if obj_x is None: return
        if self.is_duplicate_object(found_type, obj_x, obj_y): return
        self.found_objects.append({"type": found_type, "x": obj_x, "y": obj_y})
        self.publish_marker(found_type, obj_x, obj_y)
        self.get_logger().info(f"Stored {found_type} at ({obj_x:.2f}, {obj_y:.2f})")

    # -------------- Motion and state machine --------------

    def stop_robot(self):
        twist = Twist()
        self.cmd_pub.publish(twist)

    def get_closest_waypoint(self):
        if not self.unvisited_waypoints: return None
        closest_pt = None
        min_dist = float('inf')
        for pt in self.unvisited_waypoints:
            dx = pt[0] - self.robot_pose['x']
            dy = pt[1] - self.robot_pose['y']
            d = math.sqrt(dx*dx + dy*dy)
            if d < min_dist:
                min_dist = d
                closest_pt = pt
        return closest_pt

    def control_loop(self):
        # Periodically visualize waypoints
        self.img_count += 1
        if self.img_count % 20 == 0:
            self.publish_waypoints()

        # Check detection
        detection = self.current_detection
        front = self.front_distance

        # --- HIGH PRIORITY: Object Tracking Override ---
        # If we see a valid object AND we are not already busy processing one:
        if detection is not None and self.state not in ["TURN_TO_OBJECT", "APPROACH_OBJECT", "BACKING_UP", "SPINNING_AWAY"]:
            
            # Check if we already found this one
            should_chase = True
            if front is not None and self.have_pose:
                est_x, est_y = self.estimate_object_position(detection, dist=front)
                if self.is_duplicate_object(detection['type'], est_x, est_y, min_dist=1.5):
                    should_chase = False # Ignore known objects
            
            if should_chase:
                self.get_logger().info(f"High Priority: Object detected ({detection['type']}). Cancelling Nav2.")
                
                # 1. Cancel Nav2 Goal (Reason: OBJECT)
                self.cancel_reason = "OBJECT"
                if self.navigation_active:
                    self.cancel_nav_goal()
                
                # 2. Switch to Manual Control
                self.state = "TURN_TO_OBJECT"
                return

        # --- State Machine ---

        if self.state == "IDLE":
            # Pick a waypoint and send it to Nav2
            if not self.have_pose:
                if self.img_count % 20 == 0: self.get_logger().info("Waiting for AMCL pose...")
                return

            if self.unvisited_waypoints:
                target = self.get_closest_waypoint()
                self.current_waypoint = target
                
                if self.send_nav_goal(target[0], target[1]):
                    self.state = "NAVIGATING"
            else:
                self.get_logger().info("All waypoints visited!")
                self.stop_robot()

        elif self.state == "NAVIGATING":
            # Just wait. 
            # Nav2 is controlling the robot. 
            # If an object appears, the High Priority block above handles it.
            # If the goal finishes, 'get_result_callback' handles it and sets state to IDLE.
            pass

        # --- Manual Visual Servoing States ---
        
        elif self.state == "TURN_TO_OBJECT":
            twist = Twist()
            if detection is None:
                self.state = "IDLE" # Resume navigation
            else:
                offset = detection["offset"]
                if abs(offset) < self.center_tolerance:
                    self.state = "APPROACH_OBJECT"
                else:
                    twist.angular.z = -self.max_angular_speed * offset
            self.cmd_pub.publish(twist)

        elif self.state == "APPROACH_OBJECT":
            twist = Twist()
            if detection is None:
                self.state = "IDLE"
            else:
                offset = detection["offset"]
                twist.angular.z = -self.max_angular_speed * offset
                twist.linear.x = 0.1 # Slow approach speed
                if front is not None and front < self.safe_object_distance:
                    self.stop_robot()
                    self.handle_new_detection(detection)
                    self.current_detection = None
                    self.state = "BACKING_UP"
                    self.backup_counter = 15
            self.cmd_pub.publish(twist)

        elif self.state == "BACKING_UP":
            twist = Twist()
            if self.backup_counter > 0:
                twist.linear.x = -0.1
                self.backup_counter -= 1
            else:
                self.state = "SPINNING_AWAY"
                self.turn_away_counter = 30 
            self.cmd_pub.publish(twist)

        elif self.state == "SPINNING_AWAY":
            twist = Twist()
            if self.turn_away_counter > 0:
                twist.angular.z = self.max_angular_speed
                self.turn_away_counter -= 1
            else:
                self.state = "IDLE" # Resume navigation logic
                self.get_logger().info("Manual maneuver done. Resuming Nav2.")
            self.cmd_pub.publish(twist)

def main(args=None):
    rclpy.init(args=args)
    node = AutonomousSearch()
    try:
        rclpy.spin(node)
    except KeyboardInterrupt:
        pass
    finally:
        node.stop_robot()
        node.destroy_node()
        rclpy.shutdown()

if __name__ == "__main__":
    main()
